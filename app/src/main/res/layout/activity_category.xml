<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.example.liushuo.ddnetcore.activity.CategoryActivity">

        <Button
            android:id="@+id/btn_case_get"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Get请求使用case"/>

        <Button
            android:id="@+id/btn_case_post_json"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Post json 请求使用case"/>

        <Button
            android:id="@+id/btn_case_post_form"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Post form 请求使用case"/>

    </LinearLayout>

</layout>
