<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ButtonStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spRequestMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/spRequestMode"
            android:layout_toRightOf="@id/spRequestMode"
            android:text="请求方式"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="测试页面"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spVerifyMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/spVerifyMode"
            android:layout_toStartOf="@id/spVerifyMode"
            android:text="验证方式"
            android:textColor="#ffffffff"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/boder_style"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <Button
            android:id="@+id/btnTestHttp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试Http"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnTestTcpDigest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试Tcp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnTestUdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试Udp"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvShowSize"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/boder_style"
            android:fadeScrollbars="false"
            android:gravity="center_horizontal"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="Data Log"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnClearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvShowSize"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Clear"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>